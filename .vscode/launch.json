    "version": "0.2.0",
    "configurations": [{
        "name": "Python : Current file",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
    },
    {
        "name": "ACM - Local - Recommendation",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
            "FLASK_APP": "${workspaceFolder}/src/app.py",
            "FLASK_ENV": "local",
            "FLASK_DEBUG": "1",
        },
        "envFile": "${workspaceFolder}/local.env",
        "args": ["run", "--port", "5004", "--no-debugger", "--no-reload"],
        "jinja": true,
        "justMyCode": true,
    },
]
}